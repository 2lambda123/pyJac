#! /usr/bin/env python2.7
from distutils.core import setup, Extension
import distutils.ccompiler

from Cython.Distutils import build_ext
from Cython.Build import cythonize
import parallel_compiler as pcc
import numpy
import os

sources = ['$homepath/adjacob_wrapper.pyx',
           '$buildpath/ad_dydt.c',
           '$buildpath/ad_rxn_rates.c',
           '$buildpath/ad_rxn_rates_pres_mod.c',
           '$buildpath/ad_spec_rates.c',
           '$buildpath/ad_chem_utils.c',
           '$buildpath/ad_jac.c'
           ]
includes = ['$buildpath/', '$homepath/']

distutils.ccompiler.CCompiler.compile = pcc.parallelCompile

os.environ["CC"] = "g++"
os.environ["CXX"] = "g++"

ext = [Extension("adjacob",
     sources=sources,
     include_dirs=includes + [numpy.get_include()],
     extra_compile_args=['-frounding-math', '-fsignaling-nans', 
                         '-DADEPT_STACK_THREAD_UNSAFE', '-fopenmp'],
     language='c++',
     libraries=['adept'],
     extra_link_args=['-fopenmp']
     )]

setup(
    name='adjacob',
    ext_modules=ext,
    cmdclass={'build_ext': build_ext},
)
